(in-package :dswm.module.extcmds)

(defcommand gconvert () ()
  "NEW: Convert current group from tiling to float and back"
  (convert-group (current-group)))

(defcommand gnew-with-marked (name) ((:string "Input group name: "))
  "Move marked window to new group"
  (let ((group (gnewbg name)))
    (gmove-marked group)
    (gselect group)))

(defcommand grun (command group) ((:shell "Enter command to run program: ")
				  (:group "In what group? "))
  "Run shell command in specified group"
  ;; FIXME: need to run, ignoring window placement rules
  (gselect group)
  (run-shell-command command))

(defcommand grun-new (command) ((:shell "Enter command to run program: "))
  "Run shell command in new tile group with same name with command"
  ;; FIXME: need to run, ignoring window placement rules
  (if (find-group (current-screen) command)
      (message "Group ~a already exists" command)
    (progn
      (add-group (current-screen) command)
      (run-shell-command command))))
